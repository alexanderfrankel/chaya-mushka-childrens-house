<h1 class="top-header">Sign In</h1>

<%= form_for :signin, method: "POST" do |f| %>

	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>

	<p>
		<%= f.label :remember_me %>
		<%= f.check_box :remember_me %>
	</p>

	<p>
		<%= link_to "Forgot Password", new_password_reset_path %>
	</p>

	<%= f.submit "Sign In", class:"btn" %>
<% end %>
