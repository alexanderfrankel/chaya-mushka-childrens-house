<h1 class="top-header">Sign In</h1>

<%= form_for :signin, method: "POST" do |f| %>

	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>


	<div class="forgot-pass-remember-me">
		<%= f.label :remember_me, "Remember Me", class:"remember-me-label" %>
		<%= f.check_box :remember_me, class:"remember-me-checkbox" %>
		<%= link_to "Forgot Password", new_password_reset_path, class:"forgot-password" %>
	</div>

	<%= f.submit "Sign In", class:"btn sign-in-btn" %>

<% end %>
