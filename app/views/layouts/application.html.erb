<!DOCTYPE html>
<html>
<head>
  <title>Chaya Mushka</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% flash.each do |type, message| %>
		<div class="flash" id="<%= type %>">
			<%= message %>
		</div>
	<% end %>


	<div class="all-nav">
		<div class="nav-logo">
			<a href="/"><%= image_tag("preschool_logo.png", size:"140") %></a>
		</div>

		<ul class="nav-items-main">
			<li class="dropdown">
			  <a class="dropdown-menutoggle" data-toggle="dropdown" href="#">Discover CMCH Preschool</a>
			  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
			    <li><a tabindex="-1" href="#">Director's Message</a></li>
			    <li><a tabindex="-1" href="#">Mission &amp; History</a></li>
					<li><%= link_to "Faculty & Staff", staff_index_path, tabindex:"-1" %></li>
			    <li><%= link_to "News & Events", events_path, tabindex:"-1" %></li>
			    <li class="divider"></li>
			    <li><a tabindex="-1" href="#">Contact Us</a></li>
			  </ul>
			</li>

			<li class="dropdown">
			  <a class="dropdown-toggle" data-toggle="dropdown" href="#">Admissions</a>
			  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
			    <li><a tabindex="-1" href="#">Visit the School</a></li>
			    <li><a tabindex="-1" href="#">Applying</a></li>
					<li><%= link_to "Tuition Information", tuitions_path, tabindex:"-1" %></li>
			    <li><a tabindex="-1" href="#">Financial Aid</a></li>
			  </ul>
			</li>

			<li class="dropdown">
			  <a class="dropdown-toggle" data-toggle="dropdown" href="#">Academics</a>
			  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
			    <li><a tabindex="-1" href="#">Judaics</a></li>
			    <li><a tabindex="-1" href="#">Montessori</a></li>
			  </ul>
			</li>

			<li class="dropdown">
			  <a class="dropdown-toggle" data-toggle="dropdown" href="#">Support CMCH Preschool</a>
			  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
			    <li><a tabindex="-1" href="#">Alef Fund</a></li>
			    <li><a tabindex="-1" href="#">Ways To Give</a></li>
			    <li><a tabindex="-1" href="#">Donate Online</a></li>
			    <li><a tabindex="-1" href="#">Volunteer</a></li>
			    <li><a tabindex="-1" href="#">PTA</a></li>
			    <li><a tabindex="-1" href="#">Grandparents</a></li>
			    <li><a tabindex="-1" href="#">Alumni</a></li>
			  </ul>
			</li>

			<li class="dropdown">
			  <a class="dropdown-toggle" data-toggle="dropdown" href="#">My CMCH</a>
			  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
			  	<li><%= link_to "Forms", forms_path, tabindex:"-1" %></li>
			  	<li><%= link_to "Log In", signin_path, tabindex:"-1" %></li>
			  </ul>
			</li>

			<li class="dropdown">
			  <a class="dropdown-toggle" data-toggle="dropdown" href="#">Links</a>
			  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
			    <li><a tabindex="-1" href="#">CMCH Elementary</a></li>
			    <li><a tabindex="-1" href="#">CMCH Summer Camp</a></li>
			    <li><a tabindex="-1" href="#">Chabad of Georgia</a></li>
			    <li><a tabindex="-1" href="http://www.shutterfly.com">Shutterfly</a></li>
			  </ul>
			</li>
		</ul>


		<ul class="nav-items-user">
			<li class="divider-vertical"></li>
			<% if current_user %>

				<% faculty_only do %>
					<li><%= link_to "Faculty", faculty_root_path %></li>
				<% end %>

				<% admins_only do %>
					<li><%= link_to "Admin", admin_root_path %></li>
				<% end %>

				<li><%= link_to "Profile", user_path(current_user) %></li>
				<li><%= link_to "Sign Out", signout_path, method: :delete %></li>

			<% else %>

				<li><%= link_to "Sign In", signin_path %></li>
			<% end %>
		</ul>

	</div>

	<div class="main-content">
		<%= yield %>
	</div>

</body>
</html>
