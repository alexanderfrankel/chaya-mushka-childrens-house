<div id="form">
	<h3 class="admin-top-header"><%= @form.title %></h3>

	<%= simple_format(@form.description) %>

	<% if @form.asset.present? %>
		<h3>Attached Form</h3>
		<div class="asset">
			<p>
				<%= link_to File.basename(@form.asset.path), @form.asset.url %>
			</p>
			<p><small><%= number_to_human_size(@form.asset.size) %></small></p>
		</div>
	<% end %>

	<%= link_to "Edit Form", edit_admin_form_path(@form), class:"btn" %>
	<%= link_to "Delete Form", admin_form_path(@form), method: :delete, data: { confirm: "Are you sure you want to delete this form?" }, class:"btn btn-danger" %>
</div>