<div id='post'>
	<h3 class="top-header"><%= @post.title %></h3>
	<span id="author">Created by <%= @post.user.email %></span>

	<%= link_to "Edit Post", edit_faculty_post_path(@post) %>
	<%= link_to "Delete Post", faculty_post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>

</div>